<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="24:13.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:src="@drawable/ic_place_holder" />

    <TextView
        android:id="@+id/duration_tv"
        style="@style/CommonTextStyle"
        android:layout_margin="6dp"
        android:background="@drawable/shape_corners_3_solid_66000000"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
        app:layout_constraintRight_toRightOf="@+id/cover_iv"
        tool:text="03:33" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/CommonTextStyle"
        android:layout_width="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lineSpacingExtra="1dp"
        android:maxLines="2"
        android:textSize="13.5sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/cover_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cover_iv"
        tool:text="尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了尴尬了" />

    <TextView
        android:id="@+id/up_tv"
        style="@style/CommonTextStyle"
        android:layout_marginBottom="1dp"
        android:drawableLeft="@drawable/ic_video_up_gray"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/share_tv"
        app:layout_constraintLeft_toLeftOf="@+id/title_tv"
        tool:text="嘻嘻逗逗" />

    <TextView
        android:id="@+id/share_tv"
        style="@style/CommonTextStyle"
        android:drawableLeft="@drawable/ic_video_share_gray"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
        app:layout_constraintLeft_toLeftOf="@+id/title_tv"
        tool:text="1.2万" />

    <TextView
        android:id="@+id/comment_tv"
        style="@style/CommonTextStyle"
        android:layout_marginLeft="75dp"
        android:drawableLeft="@drawable/ic_video_comment_gray"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
        app:layout_constraintLeft_toLeftOf="@+id/title_tv"
        tool:text="350" />

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_dot_big"
        app:layout_constraintBottom_toBottomOf="@+id/share_tv"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        style="@style/DividerLineStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>